@model MovieSearch

<div class="media-card">
        <div class="media-image">
            <div class="rating-container">
                <p class="rating">@Model.Rating.ToString("0.0")</p>
            </div>
            <a asp-controller="Movie" asp-action="Detail" asp-route-id="@Model.Id">
                 <img src=@("https://image.tmdb.org/t/p/w200" + @Model.PosterLink) class="media-thumbnail" />
            </a>
        </div>

    <div class="media-info">
        <h5 class="media-title">@Model.Title.ToUpper()</h5>
    </div>
</div>

