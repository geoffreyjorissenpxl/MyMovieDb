@model IList<MovieSearch>
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Hello media-enthousiast!</h1>
            <p>This is a test project hooked to the api of TMDB</p>
        </div>
    </div>
    <div class="container ">
        <h1 class="display-4">popular movies</h1>
        <div class="row">
            @foreach (var movie in Model)
            {
              <div class="col-sm-2">
                  <div class="thumbnail">
                      <img src=@("https://image.tmdb.org/t/p/w200" + movie.PosterLink) />
                      <div class="caption">
                          <h3 class="pull-right">@movie.Rating</h3>
                          <h3>@movie.Title</h3>
                      </div>
                  </div>
              </div>
            }
        </div>
    </div>

</div>

